        <template id="portal_my_home_sale" name="Portal My Home : Uso de Marca" inherit_id="portal.portal_my_home"
                  priority="10">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <t t-if="partner_habilitado">
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                       href="/my/solicitud-impresion" title="Solicitudes de Impresión de Etiquetas">
                        Solicitudes de Impresión de Etiquetas
                        <t t-if="solicitud_impresion_count">
                            <span class="badge badge-secondary badge-pill">
                                <t t-esc="solicitud_impresion_count"/>
                            </span>
                        </t>
                    </a>
                </t>

                <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                   href="/my/control-etiquetas" title="Control de Etiquetas">
                    Control de Etiquetas
                    <t t-if="control_etiquetas_count">
                        <span class="badge badge-secondary badge-pill">
                            <t t-esc="control_etiquetas_count"/>
                        </span>
                    </t>
                </a>

                <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                   href="/my/control-metci" title="Gestion de solicitudes de calibracion (METCI)">
                    Gestion de solicitudes de calibracion (METCI)
                    <t t-if="control_etiquetas_count">
                        <span class="badge badge-secondary badge-pill">
                            <t t-esc="control_etiquetas_count"/>
                        </span>
                    </t>
                </a>

                <t t-if="licencia_conformidad_count">
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                       href="/my/licencia-conformidad" title="Licencia de Conformidad">
                        Licencia de Conformidad
                        <t t-if="licencia_conformidad_count">
                            <span class="badge badge-secondary badge-pill">
                                <t t-esc="licencia_conformidad_count"/>
                            </span>
                        </t>
                    </a>
                </t>
                <t t-if="licencia_conformidad_dos_count">
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                       href="/my/licencia-conformidad-dos" title="Licencia de Conformidad Esquema Tipo 2">
                        Licencia de Conformidad Esquema Tipo 2
                        <t t-if="licencia_conformidad_dos_count">
                            <span class="badge badge-secondary badge-pill">
                                <t t-esc="licencia_conformidad_dos_count"/>
                            </span>
                        </t>
                    </a>
                </t>
                <t t-if="licencia_servicios_count">
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                       href="/my/licencia-servicios" title="Licencia para uso de la Marca INTN - Servicios">
                        Licencia para uso de la Marca INTN - Servicios
                        <t t-if="licencia_servicios_count">
                            <span class="badge badge-secondary badge-pill">
                                <t t-esc="licencia_servicios_count"/>
                            </span>
                        </t>
                    </a>
                </t>
                <t t-if="certificado_conformidad_count">
                    <a class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
                       href="/my/certificado-conformidad" title="Certificado de Conformidad de Lotes de Productos">
                        Certificado de Conformidad de Lotes de Productos
                        <t t-if="certificado_conformidad_count">
                            <span class="badge badge-secondary badge-pill">
                                <t t-esc="certificado_conformidad_count"/>
                            </span>
                        </t>
                    </a>
                </t>
            </xpath>
        </template>

        <template id="portal_my_licencia_conformidad" name="Mis Licencias de Conformidad">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>

                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Licencias de Conformidad</t>
                </t>
                <t t-if="not licencia_conformidad">
                    <p>Actualmente no tiene Licencias de Conformidad.</p>
                </t>
                <t t-if="licencia_conformidad" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>Licencia de Conformidad #</th>
                            <th class="text-right">Fecha</th>
                            <th class="text-right">Fecha de Vencimiento</th>
                            <!--th class="text-right">Entrada N°</th-->
                            <th class="text-center"/>
                            <!--                        <th class="text-right">Total</th>-->
                        </tr>
                    </thead>
                    <t t-foreach="licencia_conformidad" t-as="ci">
                        <tr>
                            <td>
                                <a t-att-href="ci.get_portal_url()">
                                    <t t-esc="ci.name"/>
                                </a>
                            </td>
                            <td class="text-right">
                                <span t-field="ci.fecha"/>
                            </td>
                            <td class="text-right">
                                <span t-field="ci.fecha_vencimiento"/>
                            </td>
                            <!--td class="text-right"><span t-field="ci.order_id.name"/></td-->
                            <td class="text-center">
                                <span t-if="ci.state == 'cancel'" class="badge badge-pill badge-secondary">
                                    <i class="fa fa-fw fa-remove"/>
                                    Cancelado
                                </span>
                                <span t-if="ci.state == 'done'" class="badge badge-pill badge-success">
                                    <i class="fa fa-fw fa-check-square-o"/>
                                    Confirmado
                                </span>
                            </td>
                            <!--                        <td class="text-right">-->
                            <!--                            <span t-field="quotation.amount_total"/>-->
                            <!--                        </td>-->
                        </tr>
                    </t>
                </t>
            </t>
        </template>

        <template id="licencia_conformidad_portal_template" name="Licencias de Conformidad Portal Template"
                  inherit_id="portal.portal_sidebar" primary="True">
            <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
                <!--t t-set="o_portal_fullwidth_alert" groups="sales_team.group_sale_salesman">
                    <t t-call="portal.portal_back_in_edit_mode">
                        <t t-set="backend_url" t-value="'/web#return_label=Website&amp;model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (licencia_conformidad._name, licencia_conformidad.id, licencia_conformidad.env.ref('intn_trazabilidad_uso_marca.licencia_conformidad_action_view').id)"/>
                    </t>
                </t-->

                <div class="row mt16 o_portal_sale_sidebar">
                    <!-- Sidebar -->
                    <t t-call="portal.portal_record_sidebar">
                        <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                        <!--                    <t t-set="title">-->
                        <!--                        <h2 class="mb-0"><b t-field="sale_order.amount_total" data-id="total_amount"/> </h2>-->
                        <!--                    </t>-->
                        <t t-set="entries">
                            <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                                <t t-if="licencia_conformidad.state in ['done','cancel']">
                                    <li class="list-group-item">
                                        <div class="card-body text-center pb-2 pt-3">

                                            <h3>
                                                <t t-esc="licencia_conformidad.name"/>
                                            </h3>

                                            <p>
                                                Fecha
                                            </p>
                                            <p>
                                                <i class="fa fa-clock-o" aria-title="Fecha" title="Fecha"></i>
                                                <t t-esc="licencia_conformidad.fecha"/>
                                            </p>
                                            <span t-if="licencia_conformidad.state == 'cancel'"
                                                  class="badge badge-pill badge-secondary">
                                                <i class="fa fa-fw fa-remove"/>
                                                Cancelado
                                            </span>
                                            <span t-if="licencia_conformidad.state == 'done'"
                                                  class="badge badge-pill badge-success">
                                                <i class="fa fa-fw fa-check-square-o"/>
                                                Confirmado
                                            </span>
                                        </div>
                                    </li>
                                </t>

                                <li class="list-group-item flex-grow-1">
                                    <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                        <div class="btn-group flex-grow-1 mr-1 mb-1">
                                            <a class="btn btn-secondary btn-block o_download_btn"
                                               t-att-href="licencia_conformidad.get_portal_url(report_type='pdf', download=True)"
                                               title="Download">
                                                <i class="fa fa-download"/>
                                                Descargar
                                            </a>
                                        </div>
                                        <div class="btn-group flex-grow-1 mb-1">
                                            <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                                               t-att-href="licencia_conformidad.get_portal_url(report_type='pdf')"
                                               id="print_invoice_report" title="Print" target="_blank">
                                                <i class="fa fa-print"/>
                                                Imprimir
                                            </a>
                                        </div>
                                    </div>
                                </li>

                                <li class="navspy list-group-item pl-0 flex-grow-1" t-ignore="true"
                                    role="complementary">
                                    <ul class="nav flex-column bs-sidenav"></ul>
                                </li>

                                <li t-if="licencia_conformidad.user_id" class="list-group-item flex-grow-1">
                                    <div class="small mb-1">
                                        <strong class="text-muted">Su Contacto</strong>
                                    </div>
                                    <div class="row flex-nowrap">
                                        <div class="col flex-grow-0 pr-2">
                                            <img class="rounded-circle mr4 float-left o_portal_contact_img"
                                                 t-if="licencia_conformidad.user_id.image"
                                                 t-att-src="image_data_uri(licencia_conformidad.user_id.image)"
                                                 alt="Contacto"/>
                                            <img class="rounded-circle mr4 float-left o_portal_contact_img"
                                                 t-if="not licencia_conformidad.user_id.image"
                                                 src="/web/static/src/img/placeholder.png" alt="Contacto"/>
                                        </div>
                                        <div class="col pl-0" style="min-width: user_id">
                                            <span t-field="licencia_conformidad.user_id"
                                                  t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                            <a href="#discussion" class="small">
                                                <i class="fa fa-comment"></i>
                                                Enviar mensaje
                                            </a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </t>
                    </t>

                    <!-- Page Content -->
                    <div id="licencia_conformidad_content"
                         class="o_portal_page_content col-12 col-lg d-flex flex-column align-items-end">
                        <div class="o_portal_page_size">
                            <t t-if="error or warning" t-call="account.portal_invoice_error"/>
                            <t t-if="success and (not error and not warning)" t-call="account.portal_invoice_success"/>

                            <div class="o_portal_html_view shadow">
                                <div class="o_portal_html_loader text-center">
                                    <i class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"/>
                                </div>
                                <iframe style="min-height:1400px;" id="invoice_html" class="mt8 mb8" width="100%"
                                        height="100%" frameborder="0" scrolling="no"
                                        t-att-src="licencia_conformidad.get_portal_url(report_type='html')"/>

                            </div>

                            <div id="sale_order_communication" class="mt-4">
                                <h2>Comunicación</h2>
                                <t t-call="portal.message_thread">
                                    <t t-set="object" t-value="licencia_conformidad"/>
                                </t>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </template>

